//========//
//DoLogin
//========//
    public override int DoLogin()
    {
	
      var ExitButton = ElementByXPath("//li[contains(@role,'presentation')]/div[contains(text(),'log')]");
	
	 //if i NOT Login - go to Login Page
	 if (!IsVisible(ExitButton))
	 {

	    GoToUrl("https://www.southxchange.com/Account/Login");
	    Wait();		
	    Wait(2);
		
        var box_user = ElementByXPath("//input[@name='email']");
	    if (IsVisible(box_user))
        {
        SetText(box_user, GetSetting("Email"));
	    }
	
        Wait(2);
		
        var box_pass = ElementByXPath("//input[@name='password']");
	    if (IsVisible(box_pass))
        {
        SetText(box_pass, GetPassword("Password"));
        }
	
        Wait(2);
		
        var ButtonLog = ElementByXPath("//input[@type='submit']");
        if (IsVisible(ButtonLog))
        {
        Click(ButtonLog);
        }
	
        Wait();	

	 } // end ExitButton

        
       return base.DoLogin();
    }
